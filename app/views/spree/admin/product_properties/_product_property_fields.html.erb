<tr class="product_property fields" <% if f.object.persisted? && can?(:edit, f.object) %>id="spree_<%= dom_id(f.object) %>"<% end %> data-hook="product_property" data-controller="required-input">
  <% if f.object.persisted? && can?(:edit, f.object) %>
    <td class="move-handle">
      <%= render "spree/admin/shared/grab_handle" %>
      <%= f.hidden_field :id %>
    </td>
  <% else %>
    <td class="dummy-move-handle">
      <%= render "spree/admin/shared/grab_handle" %>
      <%= f.hidden_field :id %>
    </td>
  <% end %>
  <td class='property_name'>
    <%= f.text_field :property_name, class: 'autocomplete form-control', required: f.object.persisted?, data: { action: "input->required-input#toggleRequired" } %>
  </td>
  <td class='value'>
    <%= f.text_field :value, class: 'form-control', required: f.object.persisted?, data: { required_input_target: "togglableInput" } %>
  </td>
  <td class="show_property text-center">
    <div class="custom-control custom-checkbox">
      <%= f.check_box :show_property, { class: 'custom-control-input' } %>
      <%= f.label :show_property, '<span></span>'.html_safe , class: 'custom-control-label' %>
    </div>
  </td>
  <td class="actions">
    <span class="d-flex justify-content-end">
      <% if f.object.persisted? && can?(:destroy, f.object) %>
        <%= link_to_delete f.object, no_text: true %>
      <% else %>
      <span class="btn btn-danger btn-sm icon-link disabled" style="opacity:0.2;">
        <%= svg_icon name: "delete.svg", width: '18', height: '18' %>
      </span>
      <% end %>
    </span>
  </td>
</tr>
