<%= turbo_frame_tag "internal_note_#{dom_id(@order)}" do %>
  <div class="card mb-3" id="order_notes_summary">
    <%= form_for @order, url: spree.admin_order_internal_note_path(@order) do |f| %>
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0 h6">
          <%= Spree.t('admin.notes') %>
        </h3>
        <%= link_to_with_icon 'close.svg', nil, spree.admin_order_internal_note_path(@order), class: "btn btn-light btn-sm icon-close-order-note-edit" %>
      </div>

      <div class="card-body">
        <fieldset>
          <div data-hook="admin_order_internal_note_field">
            <%= f.field_container :internal_note do %>
              <%= f.text_area :internal_note, { rows: 5, class: "form-control" } %>
              <%= f.error_message_on :internal_note %>
            <% end %>
          </div>
          <div class="form-actions" data-hook="buttons">
            <%= button Spree.t("actions.update"), nil, "submit", { class: "btn-success w-100" } %>
          </div>
        <fieldset>
      </div>
    <% end %>
  </div>
<% end %>
