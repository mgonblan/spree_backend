<%= turbo_frame_tag "internal_note_#{dom_id(@order)}" do %>
  <div data-hook="internal-note-form-container">
    <%= form_for @order, url: spree.admin_order_internal_note_path(@order) do |f| %>
      <fieldset>
        <div data-hook="admin_order_internal_note_field">
          <%= f.field_container :internal_note do %>
            <%= f.label :internal_note, Spree.t('admin.notes') %>
            <%= f.text_area :internal_note, { rows: 5 , name: "internal_note", class: "form-control" } %>
            <%= f.error_message_on :internal_note %>
          <% end %>
        </div>
        <div class="form-actions" data-hook="buttons">
          <%= button Spree.t("actions.update"), "recycle.svg", "submit", { class: "btn-success w-100", data: { disable_with: "#{ Spree.t(:saving) }..." }} %>
        </div>
      <fieldset>
    <% end %>
  </div>
<% end %>
