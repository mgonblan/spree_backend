<%= turbo_frame_tag "internal_note_#{dom_id(@order)}" do %>
  <div class="card mb-3" id="order_notes_summary">
    <%= form_for @order, url: spree.admin_order_internal_note_path(@order) do |f| %>
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0 h6">
          <%= Spree.t('admin.notes') %>
        </h3>
        <% if can? :update, @order %>
          <%= button nil, "tick.svg", "submit", { class: "btn btn-success btn-sm icon-link" } %>
        <% end %>
      </div>

      <div class="card-body">
        <fieldset>
          <div data-hook="admin_order_internal_note_field">
            <%= f.field_container :internal_note, class: ['mb-0'] do %>
              <%= f.text_area :internal_note, { rows: 3 , name: "internal_note", class: "form-control" } %>
              <%= f.error_message_on :internal_note %>
            <% end %>
          </div>
        <fieldset>
      </div>
    <% end %>
  </div>
<% end %>
